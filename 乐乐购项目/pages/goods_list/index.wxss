/* pages/goods_list/index.wxss */
.first-tab .goods-item {
  display: flex;
  border-bottom: 1rpx solid rgba(100, 100, 100, 0.4);
}
.first-tab .goods-item .goods-img {
  flex: 3;
  padding: 10rpx 0;
  text-align: center;
}
.first-tab .goods-item .goods-img image {
  width: 70%;
}
.first-tab .goods-item .goods-info {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first-tab .goods-item .goods-info .good-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}
.first-tab .goods-item .goods-info .good-price {
  color: var(--themeColor);
  font-size: 32rpx;
}
